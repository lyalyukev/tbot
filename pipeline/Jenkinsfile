pipeline {
    agent any
    parameters {

        choice(name: 'OS', choices: ['linux', 'darwin', 'windows', 'all'], description: 'Pick OS')

    }
    stages {
        stage('Example') {
            steps {
                echo "Build image for platform ${params.OS}"

                echo "Build for Arch: ${params.ARCH}"

            }
        }
    }
}